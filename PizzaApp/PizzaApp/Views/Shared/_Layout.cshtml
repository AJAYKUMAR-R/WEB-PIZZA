}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/Index.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light  " style=" background-color:#f5f0f0">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Pizza</a>
            @if (SessionTrack.UserNameSession != null)
            {
                <a class="navbar-brand" href="#"><img src="~/Image/usericon.png"><i class="fa fa-user-circle" aria-hidden="true">@SessionTrack.UserNameSession</i></a>
            }else{
                <a class="navbar-brand" href="#"><img src="~/Image/usericon.png"><i class="fa fa-user-circle" aria-hidden="true"></i></a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse  justify-content-end " id="navbarNav">
                <ul class="navbar-nav ">
                    <li class="nav-item hover-one">
                        <a class="nav-link " aria-current="page" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item hover-one">
                        <a class="nav-link " href="/Home/About">About</a>
                    </li>
                    <li class="nav-item hover-one">
                        <a class="nav-link " href="/Home/Menu">Menu</a>
                    </li>
                    <li class="nav-item hover-one">
                         <a class="nav-link " href="/Home/Cart" >Cart <span class="text-success" id="cartCount">@SessionTrack.Orders.Count</span></a>
                    </li>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item text-dark" href="/Home/Register">Register</a></li>
                            @if(SessionTrack.UserNameSession != null)
                            {
                                <li><a class="dropdown-item text-dark" href="/Home/Logout">Logout</a></li>
                               
                            }else{
                                <li><a class="dropdown-item text-dark" href="/Home/Login">Login</a></li> 
                            }
                            
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
        @RenderSection("scripts",required:false)
    </div>

    <footer class="container-fluid mt-5  p-3" style="box-shadow: rgba(50, 50, 105, 0.15) 0px 2px 5px 0px, rgba(0, 0, 0, 0.05) 0px 1px 1px 0px; background-color:#f5f0f0">
        <div class="row ">
            <div class="col-4 ">
                <h2 class="text-center mt-3">Logo</h2>
            </div>
            <div class="col-4 ">
                <ol class="mt-3">
                    <li class="text-heading">Home</li>
                    <li class="text-heading">Contact</li>
                    <li class="text-heading">Menu</li>
                    <li class="text-heading">About</li>
                </ol>
            </div>
            <div class="col-4  text-heading">
                <h2 class="mt-3 text-heading">Address</h2>
                <p class="text-heading">	203 Fake St. Mountain View, San Francisco, California, USA</p>
                <p class="text-heading">
                    +2 392 3929 210
                </p>
                <p class="text-heading">info@gmail.com</p>
            </div>
        </div>
        <div>
            <hr />
        </div>
        <div class="text-center">
            rightsreserved &#169; www.infotexh.com
        </div>
    </footer>
</body>
</html>
